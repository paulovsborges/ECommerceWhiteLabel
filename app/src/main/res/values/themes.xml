<resources>

    <style name="Theme.ECommerceWhiteLabel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange_vivid</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/darker_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/dark3</item>
    </style>

    <style name="OutlinedTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/orange_vivid</item>
        <item name="colorOnSecondary">@color/orange_vivid</item>
        <item name="colorOnSurface">@color/orange_vivid</item>
        <item name="boxStrokeColor">@color/orange_vivid</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorError">@color/red_vivid</item>
        <item name="textAppearanceSubtitle1">@color/red_vivid</item>
        <item name="textAppearanceCaption">@color/dark3</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:backgroundTint">@color/orange_vivid</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:backgroundTint">@color/dark2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProfileAccessButtons">
        <item name="android:padding">10dp</item>
        <item name="fontFamily">@font/myriadpro_semibold</item>
        <item name="iconSize">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/black</item>
        <item name="strokeColor">@color/dark1</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_marginHorizontal">20dp</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/myriadpro_semibold</item>
        <item name="android:textColor">@color/dark1</item>
    </style>

    <style name="SubtitleTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/myriadpro_regular</item>
        <item name="android:textColor">@color/dark1</item>
    </style>
</resources>